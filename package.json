{
  "name": "mbc-laboratory",
  "version": "1.0.0",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "dev": "nodemon app.js",
    "build-css": "tailwindcss -i ./src/input.css -o ./public/css/style.css",
    "watch-css": "tailwindcss -i ./src/input.css -o ./public/css/style.css --watch",
    "build": "npm run build-css",
    "deploy-vercel": "npm run build && vercel --prod",
    "test": "echo \"No tests specified\" && exit 0"
  },
  "keywords": [
    "express",
    "tailwind",
    "cybersecurity",
    "laboratory"
  ],
  "author": "MBC Laboratory",
  "license": "MIT",
  "description": "MBC Laboratory Landing Page with Express and Tailwind CSS",
  "dependencies": {
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^17.0.1",
    "ejs": "^3.1.10",
    "express": "^5.1.0",
    "nodemailer": "^7.0.4",
    "validator": "^13.15.15"
  },
  "devDependencies": {
    "nodemon": "^3.1.10",
    "tailwindcss": "^3.4.17"
  }
}
