# Environment Variables Template
# Copy this file to .env and fill in your actual values

# Server Configuration
NODE_ENV=development
PORT=3000
HTTPS_PORT=443

# Domain Configuration
DOMAIN_NAME=mbclaboratory.com
SUBDOMAIN_API=api.mbclaboratory.com
SUBDOMAIN_ADMIN=admin.mbclaboratory.com

# Email Configuration (Gmail example)
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=noreply@mbclaboratory.com
EMAIL_TO=admin@mbclaboratory.com

# SSL Configuration
SSL_KEY=/path/to/private-key.pem
SSL_CERT=/path/to/certificate.pem
HTTPS_REDIRECT=false

# Security Configuration
IDS_RATE_LIMIT=100
IDS_WINDOW_MS=60000
ADMIN_TOKEN=change-this-secure-token

# SMTP Configuration (alternative)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false

# Database (if needed in future)
# DATABASE_URL=postgresql://user:password@localhost:5432/mbc_lab

# Third-party APIs (if needed)
# GOOGLE_MAPS_API_KEY=your-google-maps-key
# RECAPTCHA_SITE_KEY=your-recaptcha-site-key
# RECAPTCHA_SECRET_KEY=your-recaptcha-secret-key
