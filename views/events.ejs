<!DOCTYPE html>
<html lang="id" class="scroll-smooth">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    
    <!-- AOS Animation Library -->
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
</head>
<body class="bg-white events-page">
    <%- include('partials/navbar') %>

    <!-- Hero Section -->
    <section class="relative pt-20 pb-16 bg-gradient-to-br from-primary via-cyber to-mint overflow-hidden">
        <div class="absolute inset-0 bg-black/40"></div>
        
        <!-- Background decoration -->
        <div class="absolute inset-0">
            <div class="absolute top-1/4 left-1/4 w-64 h-64 bg-white/10 rounded-full blur-3xl"></div>
            <div class="absolute bottom-1/4 right-1/3 w-80 h-80 bg-mint/20 rounded-full blur-3xl"></div>
        </div>
        
        <div class="container-custom relative z-10 pt-16">
            <div class="text-center max-w-4xl mx-auto">
                <h1 class="text-5xl md:text-6xl lg:text-7xl font-bold text-white mb-6" data-aos="fade-up">
                    Cybersecurity <span class="text-mint">Events</span> & 
                    <span class="text-cyber">Workshops</span>
                </h1>
                <p class="text-xl md:text-2xl text-white/90 mb-8 leading-relaxed" data-aos="fade-up" data-aos-delay="200">
                    Join our hands-on workshops, seminars, and conferences to enhance your cybersecurity skills
                </p>
                
                <!-- Search and Filter -->
                <div class="max-w-2xl mx-auto" data-aos="fade-up" data-aos-delay="400">
                    <form method="GET" action="/events" class="flex flex-col sm:flex-row gap-4">
                        <div class="flex-1">
                            <div class="relative">
                                <input type="text" name="search" placeholder="Search events..." 
                                       value="<%= searchQuery || '' %>"
                                       class="w-full px-4 py-3 pl-12 rounded-lg border border-white/20 bg-white/10 backdrop-blur-md text-white placeholder-white/70 focus:outline-none focus:ring-2 focus:ring-mint">
                                <i class="fas fa-search absolute left-4 top-1/2 transform -translate-y-1/2 text-white/70"></i>
                            </div>
                        </div>
                        <div class="flex gap-2">
                            <select name="category" class="px-4 py-3 rounded-lg border border-white/20 bg-white/10 backdrop-blur-md text-white focus:outline-none focus:ring-2 focus:ring-mint">
                                <option value="" <%= !selectedCategory ? 'selected' : '' %>>All Categories</option>
                                <option value="workshop" <%= selectedCategory === 'workshop' ? 'selected' : '' %>>Workshop</option>
                                <option value="seminar" <%= selectedCategory === 'seminar' ? 'selected' : '' %>>Seminar</option>
                                <option value="conference" <%= selectedCategory === 'conference' ? 'selected' : '' %>>Conference</option>
                                <option value="masterclass" <%= selectedCategory === 'masterclass' ? 'selected' : '' %>>Masterclass</option>
                            </select>
                            <button type="submit" class="btn btn-cyber px-6 py-3">
                                <i class="fas fa-filter mr-2"></i>Filter
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>

    <!-- Events Grid -->
    <section class="section-padding bg-gradient-to-br from-white to-gray-50">
        <div class="container-custom">
            <!-- Results Info -->
            <div class="flex flex-col sm:flex-row justify-between items-center mb-8">
                <div class="text-black/70 mb-4 sm:mb-0">
                    <% if (searchQuery) { %>
                        Showing <span class="font-bold text-primary"><%= pagination.totalItems %></span> results for "<span class="font-bold"><%= searchQuery %></span>"
                    <% } else { %>
                        Showing <span class="font-bold text-primary"><%= pagination.totalItems %></span> events
                        <% if (selectedCategory) { %>
                            in <span class="font-bold"><%= selectedCategory %></span>
                        <% } %>
                    <% } %>
                </div>
                
                <div class="flex items-center space-x-4">
                    <span class="text-black/70 text-sm">Sort by:</span>
                    <select class="px-3 py-2 rounded-lg border border-gray-200 bg-white text-sm focus:outline-none focus:ring-2 focus:ring-primary">
                        <option>Latest</option>
                        <option>Date</option>
                        <option>Alphabetical</option>
                    </select>
                </div>
            </div>

            <% if (events.length > 0) { %>
            <!-- Events Grid -->
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-12">
                <% events.forEach(function(event, index) { %>
                <article class="bg-white rounded-2xl shadow-xl hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2 overflow-hidden border border-gray-100" data-aos="fade-up" data-aos-delay="<%= index * 100 %>">
                    <div class="relative overflow-hidden h-48">
                        <img src="<%= event.image %>" alt="<%= event.title %>" class="w-full h-full object-cover transition-transform duration-300 hover:scale-105">
                        <div class="absolute top-4 left-4">
                            <span class="bg-<%= event.category === 'workshop' ? 'blue' : event.category === 'seminar' ? 'green' : event.category === 'conference' ? 'purple' : 'yellow' %>-500 text-white px-3 py-1 rounded-full text-sm font-medium">
                                <%= event.category.charAt(0).toUpperCase() + event.category.slice(1) %>
                            </span>
                        </div>
                        <div class="absolute top-4 right-4">
                            <span class="bg-<%= event.status === 'open' ? 'green' : 'gray' %>-500 text-white px-2 py-1 rounded text-xs">
                                <i class="fas fa-users mr-1"></i><%= event.spotsLeft %> spots left
                            </span>
                        </div>
                    </div>
                    
                    <div class="p-6">
                        <div class="flex items-center text-sm text-black/60 mb-3">
                            <span>
                                <i class="far fa-calendar-alt mr-1"></i>
                                <%= new Date(event.date).toLocaleDateString('id-ID', { day: 'numeric', month: 'long', year: 'numeric' }) %>
                            </span>
                            <span class="mx-2">â€¢</span>
                            <span>
                                <i class="far fa-clock mr-1"></i>
                                <%= event.time %>
                            </span>
                        </div>
                        
                        <h3 class="text-xl font-bold text-black mb-3 line-clamp-2 hover:text-primary transition-colors">
                            <a href="/events/<%= event.slug %>"><%= event.title %></a>
                        </h3>
                        
                        <p class="text-black/70 mb-4 line-clamp-3">
                            <%= event.description %>
                        </p>
                        
                        <div class="flex items-center justify-between mb-4">
                            <div class="flex items-center text-sm text-black/60">
                                <i class="fas fa-map-marker-alt mr-1"></i>
                                <span><%= event.type === 'online' ? 'Online' : event.type === 'offline' ? event.location : 'Hybrid' %></span>
                            </div>
                            <div class="text-primary font-bold text-lg">
                                <% if (typeof event.price === 'string') { %>
                                    <%= event.price %>
                                <% } else if (event.price === 0) { %>
                                    Free
                                <% } else { %>
                                    Rp <%= event.price.toLocaleString('id-ID') %>
                                <% } %>
                            </div>
                        </div>
                        
                        <div class="flex items-center justify-between">
                            <div class="flex flex-wrap gap-2">
                                <span class="bg-gray-100 text-gray-600 px-2 py-1 rounded-md text-xs">
                                    <%= event.type %>
                                </span>
                                <% if (event.level) { %>
                                <span class="bg-gray-100 text-gray-600 px-2 py-1 rounded-md text-xs">
                                    <%= event.level %>
                                </span>
                                <% } %>
                            </div>
                            
                            <a href="/events/<%= event.slug %>" class="text-primary hover:text-primary-600 font-medium text-sm flex items-center transition-colors">
                                View Details
                                <i class="fas fa-arrow-right ml-2 text-xs"></i>
                            </a>
                        </div>
                    </div>
                </article>
                <% }); %>
            </div>

            <!-- Pagination -->
            <% if (pagination.totalPages > 1) { %>
            <div class="flex justify-center">
                <div class="flex items-center space-x-2">
                    <% if (pagination.currentPage > 1) { %>
                        <a href="?page=<%= pagination.currentPage - 1 %><%= selectedCategory ? '&category=' + selectedCategory : '' %><%= searchQuery ? '&search=' + searchQuery : '' %>" 
                           class="px-4 py-2 bg-white border border-gray-200 rounded-lg text-black hover:bg-gray-50 transition-colors">
                            <i class="fas fa-chevron-left"></i>
                        </a>
                    <% } %>

                    <% for (let i = Math.max(1, pagination.currentPage - 2); i <= Math.min(pagination.totalPages, pagination.currentPage + 2); i++) { %>
                        <a href="?page=<%= i %><%= selectedCategory ? '&category=' + selectedCategory : '' %><%= searchQuery ? '&search=' + searchQuery : '' %>" 
                           class="px-4 py-2 <%= i === pagination.currentPage ? 'bg-primary text-white' : 'bg-white text-black hover:bg-gray-50' %> border border-gray-200 rounded-lg transition-colors">
                            <%= i %>
                        </a>
                    <% } %>

                    <% if (pagination.currentPage < pagination.totalPages) { %>
                        <a href="?page=<%= pagination.currentPage + 1 %><%= selectedCategory ? '&category=' + selectedCategory : '' %><%= searchQuery ? '&search=' + searchQuery : '' %>" 
                           class="px-4 py-2 bg-white border border-gray-200 rounded-lg text-black hover:bg-gray-50 transition-colors">
                            <i class="fas fa-chevron-right"></i>
                        </a>
                    <% } %>
                </div>
            </div>
            <% } %>
            <% } else { %>
            <!-- No Events Found -->
            <div class="text-center py-16">
                <div class="max-w-md mx-auto bg-white rounded-2xl shadow-xl p-12">
                    <i class="fas fa-calendar-times text-6xl text-gray-300 mb-6"></i>
                    <h3 class="text-2xl font-bold text-black mb-4">No Events Found</h3>
                    <p class="text-black/70 mb-6">
                        <% if (searchQuery || selectedCategory) { %>
                            Sorry, no events match your search criteria.
                        <% } else { %>
                            No events are currently available. Please check back later.
                        <% } %>
                    </p>
                    <% if (searchQuery || selectedCategory) { %>
                        <a href="/events" class="btn btn-primary">
                            View All Events
                        </a>
                    <% } %>
                </div>
            </div>
            <% } %>
        </div>
    </section>

    <%- include('partials/footer') %>

    <script>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
                <!-- Company Info -->
                <div class="col-span-1 md:col-span-2">
                    <div class="flex items-center mb-6">
                        <i class="fas fa-robot text-4xl mr-4"></i>
                        <div>
                            <h3 class="text-2xl font-bold">MBC Laboratory</h3>
                            <p class="text-white/80">Cybersecurity Excellence</p>
                        </div>
                    </div>
                    <p class="text-white/90 mb-6 leading-relaxed">
                        Leading cybersecurity laboratory providing comprehensive digital security solutions 
                        to protect your digital assets and empower your organization.
                    </p>
                    <div class="flex space-x-4">
                        <a href="#" class="footer-link hover:text-mint">
                            <i class="fab fa-twitter text-xl"></i>
                        </a>
                        <a href="#" class="footer-link hover:text-mint">
                            <i class="fab fa-linkedin text-xl"></i>
                        </a>
                        <a href="#" class="footer-link hover:text-mint">
                            <i class="fab fa-github text-xl"></i>
                        </a>
                        <a href="#" class="footer-link hover:text-mint">
                            <i class="fab fa-youtube text-xl"></i>
                        </a>
                    </div>
                </div>

                <!-- Quick Links -->
                <div>
                    <h4 class="footer-heading">Quick Links</h4>
                    <ul class="space-y-3">
                        <li><a href="/" class="footer-link">Home</a></li>
                        <li><a href="/services" class="footer-link">Services</a></li>
                        <li><a href="/news" class="footer-link">News</a></li>
                        <li><a href="/events" class="footer-link">Events</a></li>
                        <li><a href="/contact" class="footer-link">Contact</a></li>
                        <li><a href="/developer" class="footer-link">Developer</a></li>
                    </ul>
                </div>

                <!-- Contact Info -->
                <div>
                    <h4 class="footer-heading">Contact</h4>
                    <ul class="space-y-3">
                        <li class="flex items-center">
                            <i class="footer-icon fas fa-envelope mr-3"></i>
                            <span class="footer-text">info@mbclaboratory.com</span>
                        </li>
                        <li class="flex items-center">
                            <i class="footer-icon fas fa-phone mr-3"></i>
                            <span class="footer-text">+62 812 3456 7890</span>
                        </li>
                        <li class="flex items-center">
                            <i class="footer-icon fas fa-map-marker-alt mr-3"></i>
                            <span class="footer-text">Jakarta, Indonesia</span>
                        </li>
                    </ul>
                </div>
            </div>

            <div class="border-t border-white/20 pt-8 mt-12 text-center">
                <p class="footer-text">
                    Â© 2024 MBC Laboratory. All rights reserved.
                </p>
            </div>
        </div>
    </footer>

    <script>
        // Mobile menu toggle
        document.getElementById('mobile-menu-button').addEventListener('click', function() {
            const mobileMenu = document.getElementById('mobile-menu');
            mobileMenu.classList.toggle('hidden');
        });
    </script>
    
    <!-- AOS Animation JavaScript -->
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script>
        AOS.init({
            duration: 800,
            easing: 'ease-in-out',
            once: true,
            offset: 100
        });
    </script>
</body>
</html>
