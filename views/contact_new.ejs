<!DOCTYPE html>
<html lang="id" class="scroll-smooth">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: {
                            50: '#eff6ff', 100: '#dbeafe', 200: '#bfdbfe', 300: '#93c5fd',
                            400: '#60a5fa', 500: '#3b82f6', 600: '#2563eb', 700: '#1d4ed8',
                            800: '#1e40af', 900: '#1e3a8a',
                        },
                        cyber: {
                            50: '#f0f9ff', 100: '#e0f2fe', 200: '#bae6fd', 300: '#7dd3fc',
                            400: '#38bdf8', 500: '#0ea5e9', 600: '#0284c7', 700: '#0369a1',
                            800: '#075985', 900: '#0c4a6e',
                        }
                    }
                }
            }
        }
    </script>
</head>
<body class="bg-gray-50">
    <!-- Navigation -->
    <nav class="fixed w-full z-50 bg-white/90 backdrop-blur-md shadow-lg border-b border-gray-100">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex items-center justify-between h-16">
                <div class="flex items-center">
                    <a href="/" class="text-2xl font-bold bg-gradient-to-r from-primary-600 to-cyber-600 bg-clip-text text-transparent">
                        <i class="fas fa-shield-alt mr-2"></i>MBC Laboratory
                    </a>
                </div>
                
                <!-- Desktop Navigation -->
                <div class="hidden md:block">
                    <div class="ml-10 flex items-baseline space-x-8">
                        <a href="/" class="<%= currentPage === 'home' ? 'text-primary-600 border-b-2 border-primary-600' : 'text-gray-700 hover:text-primary-600' %> px-3 py-2 text-sm font-medium transition-colors duration-200">
                            <i class="fas fa-home mr-2"></i>Home
                        </a>
                        <a href="/services" class="<%= currentPage === 'services' ? 'text-primary-600 border-b-2 border-primary-600' : 'text-gray-700 hover:text-primary-600' %> px-3 py-2 text-sm font-medium transition-colors duration-200">
                            <i class="fas fa-cogs mr-2"></i>Services
                        </a>
                        <a href="/contact" class="<%= currentPage === 'contact' ? 'text-primary-600 border-b-2 border-primary-600' : 'text-gray-700 hover:text-primary-600' %> px-3 py-2 text-sm font-medium transition-colors duration-200">
                            <i class="fas fa-envelope mr-2"></i>Contact
                        </a>
                        <a href="/developer" class="<%= currentPage === 'developer' ? 'text-primary-600 border-b-2 border-primary-600' : 'text-gray-700 hover:text-primary-600' %> px-3 py-2 text-sm font-medium transition-colors duration-200">
                            <i class="fas fa-code mr-2"></i>Developer
                        </a>
                    </div>
                </div>
                
                <!-- Mobile menu button -->
                <div class="md:hidden">
                    <button id="mobile-menu-button" class="text-gray-700 hover:text-primary-600 focus:outline-none focus:text-primary-600">
                        <i class="fas fa-bars text-xl"></i>
                    </button>
                </div>
            </div>
        </div>
        
        <!-- Mobile Navigation -->
        <div id="mobile-menu" class="hidden md:hidden bg-white border-t border-gray-100">
            <div class="px-2 pt-2 pb-3 space-y-1">
                <a href="/" class="<%= currentPage === 'home' ? 'bg-primary-50 text-primary-600' : 'text-gray-700 hover:bg-gray-50' %> block px-3 py-2 text-base font-medium rounded-md">
                    <i class="fas fa-home mr-2"></i>Home
                </a>
                <a href="/services" class="<%= currentPage === 'services' ? 'bg-primary-50 text-primary-600' : 'text-gray-700 hover:bg-gray-50' %> block px-3 py-2 text-base font-medium rounded-md">
                    <i class="fas fa-cogs mr-2"></i>Services
                </a>
                <a href="/contact" class="<%= currentPage === 'contact' ? 'bg-primary-50 text-primary-600' : 'text-gray-700 hover:bg-gray-50' %> block px-3 py-2 text-base font-medium rounded-md">
                    <i class="fas fa-envelope mr-2"></i>Contact
                </a>
                <a href="/developer" class="<%= currentPage === 'developer' ? 'bg-primary-50 text-primary-600' : 'text-gray-700 hover:bg-gray-50' %> block px-3 py-2 text-base font-medium rounded-md">
                    <i class="fas fa-code mr-2"></i>Developer
                </a>
            </div>
        </div>
    </nav>

    <!-- Contact Hero -->
    <section class="relative pt-20 pb-16 overflow-hidden">
        <!-- Background -->
        <div class="absolute inset-0 bg-gradient-to-br from-primary-600 via-cyber-600 to-primary-800"></div>
        <div class="absolute inset-0 bg-black/40"></div>
        
        <!-- Animated Background Elements -->
        <div class="absolute inset-0">
            <div class="absolute top-1/4 left-1/4 w-72 h-72 bg-cyber-400/20 rounded-full blur-3xl animate-pulse"></div>
            <div class="absolute bottom-1/4 right-1/4 w-96 h-96 bg-primary-400/20 rounded-full blur-3xl animate-pulse"></div>
        </div>
        
        <!-- Content -->
        <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
            <h1 class="text-5xl md:text-6xl font-bold text-white mb-6">
                Hubungi <span class="text-cyan-300">Kami</span>
            </h1>
            <p class="text-xl text-gray-200 max-w-3xl mx-auto leading-relaxed">
                Konsultasikan kebutuhan teknologi Anda dengan tim ahli kami. 
                Kami siap memberikan solusi terbaik untuk organisasi Anda.
            </p>
        </div>
    </section>

    <!-- Success Message -->
    <% if (typeof success !== 'undefined' && success) { %>
    <div class="bg-green-50 border-l-4 border-green-400 p-4 mx-4 sm:mx-6 lg:mx-8 mt-8 rounded-r-lg">
        <div class="flex">
            <div class="flex-shrink-0">
                <i class="fas fa-check-circle text-green-400 text-xl"></i>
            </div>
            <div class="ml-3">
                <p class="text-green-700 font-medium"><%= success %></p>
            </div>
        </div>
    </div>
    <% } %>

    <!-- Contact Section -->
    <section class="py-16 lg:py-24 bg-gray-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-16">
                <!-- Contact Form -->
                <div class="bg-white rounded-3xl shadow-2xl p-8 md:p-12">
                    <div class="text-center mb-8">
                        <h2 class="text-3xl font-bold text-gray-900 mb-4">Kirim Pesan</h2>
                        <p class="text-gray-600">Ceritakan tentang proyek atau kebutuhan teknologi Anda</p>
                    </div>
                    
                    <form action="/contact" method="POST" class="space-y-6">
                        <div>
                            <label for="name" class="block text-sm font-medium text-gray-700 mb-2">
                                <i class="fas fa-user mr-2 text-primary-600"></i>Nama Lengkap
                            </label>
                            <input 
                                type="text" 
                                id="name" 
                                name="name" 
                                required 
                                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-all duration-200"
                                placeholder="Masukkan nama lengkap Anda"
                            >
                        </div>
                        
                        <div>
                            <label for="email" class="block text-sm font-medium text-gray-700 mb-2">
                                <i class="fas fa-envelope mr-2 text-primary-600"></i>Email
                            </label>
                            <input 
                                type="email" 
                                id="email" 
                                name="email" 
                                required 
                                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-all duration-200"
                                placeholder="nama@email.com"
                            >
                        </div>
                        
                        <div>
                            <label for="service" class="block text-sm font-medium text-gray-700 mb-2">
                                <i class="fas fa-cogs mr-2 text-primary-600"></i>Layanan yang Diminati
                            </label>
                            <select 
                                id="service" 
                                name="service" 
                                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-all duration-200"
                            >
                                <option value="">Pilih layanan...</option>
                                <option value="cybersecurity">Cybersecurity Solutions</option>
                                <option value="bigdata">Big Data Analytics</option>
                                <option value="gametech">Game Technology</option>
                                <option value="gis">Geographic Information Systems</option>
                                <option value="konsultasi">Konsultasi Umum</option>
                            </select>
                        </div>
                        
                        <div>
                            <label for="message" class="block text-sm font-medium text-gray-700 mb-2">
                                <i class="fas fa-comment mr-2 text-primary-600"></i>Pesan
                            </label>
                            <textarea 
                                id="message" 
                                name="message" 
                                rows="6" 
                                required 
                                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-all duration-200 resize-none"
                                placeholder="Ceritakan detail kebutuhan teknologi atau pertanyaan Anda..."
                            ></textarea>
                        </div>
                        
                        <button 
                            type="submit" 
                            class="w-full bg-gradient-to-r from-primary-600 to-cyber-600 text-white font-semibold py-4 px-6 rounded-lg hover:from-primary-700 hover:to-cyber-700 transition-all duration-300 transform hover:-translate-y-1 shadow-lg hover:shadow-xl"
                        >
                            <i class="fas fa-paper-plane mr-2"></i>Kirim Pesan
                        </button>
                    </form>
                </div>
                
                <!-- Contact Information -->
                <div class="space-y-8">
                    <!-- Contact Details -->
                    <div class="bg-white rounded-3xl shadow-2xl p-8">
                        <h3 class="text-2xl font-bold text-gray-900 mb-6 flex items-center">
                            <i class="fas fa-address-book mr-3 text-primary-600"></i>Informasi Kontak
                        </h3>
                        
                        <div class="space-y-6">
                            <div class="flex items-start">
                                <div class="w-12 h-12 bg-gradient-to-br from-primary-500 to-primary-600 rounded-xl flex items-center justify-center mr-4 mt-1">
                                    <i class="fas fa-envelope text-white"></i>
                                </div>
                                <div>
                                    <h4 class="font-semibold text-gray-900 mb-1">Email</h4>
                                    <p class="text-gray-600">info@mbclaboratory.com</p>
                                    <p class="text-gray-600">support@mbclaboratory.com</p>
                                </div>
                            </div>
                            
                            <div class="flex items-start">
                                <div class="w-12 h-12 bg-gradient-to-br from-green-500 to-green-600 rounded-xl flex items-center justify-center mr-4 mt-1">
                                    <i class="fas fa-phone text-white"></i>
                                </div>
                                <div>
                                    <h4 class="font-semibold text-gray-900 mb-1">Telepon</h4>
                                    <p class="text-gray-600">+62 xxx-xxxx-xxxx</p>
                                    <p class="text-gray-600">+62 xxx-xxxx-xxxx (WhatsApp)</p>
                                </div>
                            </div>
                            
                            <div class="flex items-start">
                                <div class="w-12 h-12 bg-gradient-to-br from-red-500 to-red-600 rounded-xl flex items-center justify-center mr-4 mt-1">
                                    <i class="fas fa-map-marker-alt text-white"></i>
                                </div>
                                <div>
                                    <h4 class="font-semibold text-gray-900 mb-1">Lokasi</h4>
                                    <p class="text-gray-600">Indonesia</p>
                                    <p class="text-gray-600">Remote & On-site Services</p>
                                </div>
                            </div>
                            
                            <div class="flex items-start">
                                <div class="w-12 h-12 bg-gradient-to-br from-purple-500 to-purple-600 rounded-xl flex items-center justify-center mr-4 mt-1">
                                    <i class="fas fa-clock text-white"></i>
                                </div>
                                <div>
                                    <h4 class="font-semibold text-gray-900 mb-1">Jam Operasional</h4>
                                    <p class="text-gray-600">Senin - Jumat: 09:00 - 17:00 WIB</p>
                                    <p class="text-gray-600">Response 24/7 untuk emergency</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Why Choose Us -->
                    <div class="bg-gradient-to-br from-gray-900 to-gray-800 rounded-3xl p-8 text-white">
                        <h3 class="text-2xl font-bold mb-6 flex items-center">
                            <i class="fas fa-star mr-3 text-yellow-400"></i>Mengapa Memilih Kami?
                        </h3>
                        
                        <div class="space-y-4">
                            <div class="flex items-center">
                                <i class="fas fa-check-circle text-green-400 mr-3"></i>
                                <span>Tim ahli berpengalaman internasional</span>
                            </div>
                            <div class="flex items-center">
                                <i class="fas fa-check-circle text-green-400 mr-3"></i>
                                <span>Solusi yang disesuaikan dengan kebutuhan</span>
                            </div>
                            <div class="flex items-center">
                                <i class="fas fa-check-circle text-green-400 mr-3"></i>
                                <span>Support 24/7 untuk layanan kritis</span>
                            </div>
                            <div class="flex items-center">
                                <i class="fas fa-check-circle text-green-400 mr-3"></i>
                                <span>Teknologi terdepan dan terbaru</span>
                            </div>
                            <div class="flex items-center">
                                <i class="fas fa-check-circle text-green-400 mr-3"></i>
                                <span>Konsultasi gratis untuk evaluasi awal</span>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Social Media -->
                    <div class="bg-white rounded-3xl shadow-2xl p-8">
                        <h3 class="text-2xl font-bold text-gray-900 mb-6 flex items-center">
                            <i class="fas fa-share-alt mr-3 text-primary-600"></i>Ikuti Kami
                        </h3>
                        
                        <div class="flex space-x-4">
                            <a href="#" class="w-12 h-12 bg-blue-600 rounded-xl flex items-center justify-center text-white hover:bg-blue-700 transition-colors">
                                <i class="fab fa-linkedin-in"></i>
                            </a>
                            <a href="#" class="w-12 h-12 bg-gray-800 rounded-xl flex items-center justify-center text-white hover:bg-gray-900 transition-colors">
                                <i class="fab fa-github"></i>
                            </a>
                            <a href="#" class="w-12 h-12 bg-blue-400 rounded-xl flex items-center justify-center text-white hover:bg-blue-500 transition-colors">
                                <i class="fab fa-twitter"></i>
                            </a>
                            <a href="#" class="w-12 h-12 bg-green-500 rounded-xl flex items-center justify-center text-white hover:bg-green-600 transition-colors">
                                <i class="fab fa-whatsapp"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="bg-gray-900 text-white">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
                <div class="lg:col-span-2">
                    <div class="flex items-center mb-6">
                        <i class="fas fa-shield-alt text-2xl text-cyan-400 mr-3"></i>
                        <h3 class="text-2xl font-bold">MBC Laboratory</h3>
                    </div>
                    <p class="text-gray-400 leading-relaxed mb-6 max-w-md">
                        Pusat Riset Teknologi dan Konsultan Cybersecurity, Big Data Analytics, 
                        Game Technology, dan Geographic Information Systems (GIS) yang terdepan di Indonesia.
                    </p>
                    <div class="flex space-x-4">
                        <a href="#" class="w-10 h-10 bg-primary-600 rounded-lg flex items-center justify-center hover:bg-primary-700 transition-colors">
                            <i class="fab fa-linkedin-in"></i>
                        </a>
                        <a href="#" class="w-10 h-10 bg-primary-600 rounded-lg flex items-center justify-center hover:bg-primary-700 transition-colors">
                            <i class="fab fa-github"></i>
                        </a>
                        <a href="#" class="w-10 h-10 bg-primary-600 rounded-lg flex items-center justify-center hover:bg-primary-700 transition-colors">
                            <i class="fab fa-twitter"></i>
                        </a>
                    </div>
                </div>
                
                <div>
                    <h3 class="text-lg font-semibold mb-6 text-cyan-300">Kontak</h3>
                    <div class="space-y-4">
                        <div class="flex items-center">
                            <i class="fas fa-envelope text-cyan-400 mr-3 w-5"></i>
                            <span class="text-gray-400">info@mbclaboratory.com</span>
                        </div>
                        <div class="flex items-center">
                            <i class="fas fa-phone text-cyan-400 mr-3 w-5"></i>
                            <span class="text-gray-400">+62 xxx-xxxx-xxxx</span>
                        </div>
                        <div class="flex items-start">
                            <i class="fas fa-map-marker-alt text-cyan-400 mr-3 w-5 mt-1"></i>
                            <span class="text-gray-400">Indonesia</span>
                        </div>
                    </div>
                </div>
                
                <div>
                    <h3 class="text-lg font-semibold mb-6 text-cyan-300">Layanan</h3>
                    <ul class="space-y-3">
                        <li><a href="/services" class="text-gray-400 hover:text-white transition-colors">Cybersecurity Solutions</a></li>
                        <li><a href="/services" class="text-gray-400 hover:text-white transition-colors">Big Data Analytics</a></li>
                        <li><a href="/services" class="text-gray-400 hover:text-white transition-colors">Game Technology</a></li>
                        <li><a href="/services" class="text-gray-400 hover:text-white transition-colors">Geographic Information Systems</a></li>
                        <li><a href="/developer" class="text-gray-400 hover:text-white transition-colors">Developer Documentation</a></li>
                    </ul>
                </div>
            </div>
        </div>
        
        <div class="border-t border-gray-800">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
                <div class="flex flex-col md:flex-row justify-between items-center">
                    <p class="text-gray-400 text-sm">
                        &copy; 2025 MBC Laboratory. All rights reserved.
                    </p>
                    <div class="flex space-x-6 mt-4 md:mt-0">
                        <a href="#" class="text-gray-400 hover:text-white text-sm transition-colors">Privacy Policy</a>
                        <a href="#" class="text-gray-400 hover:text-white text-sm transition-colors">Terms of Service</a>
                        <a href="/developer" class="text-gray-400 hover:text-white text-sm transition-colors">Developer Info</a>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <script>
        // Mobile menu toggle
        const mobileMenuButton = document.getElementById('mobile-menu-button');
        const mobileMenu = document.getElementById('mobile-menu');
        
        mobileMenuButton.addEventListener('click', () => {
            mobileMenu.classList.toggle('hidden');
        });
        
        // Form validation
        const contactForm = document.querySelector('form');
        contactForm.addEventListener('submit', function(e) {
            const name = document.getElementById('name').value.trim();
            const email = document.getElementById('email').value.trim();
            const message = document.getElementById('message').value.trim();
            
            if (!name || !email || !message) {
                e.preventDefault();
                alert('Mohon lengkapi semua field yang wajib diisi');
            }
        });
        
        // Add scroll effect to navbar
        window.addEventListener('scroll', () => {
            const navbar = document.querySelector('nav');
            if (window.scrollY > 100) {
                navbar.classList.add('backdrop-blur-md', 'bg-white/95');
            } else {
                navbar.classList.remove('backdrop-blur-md', 'bg-white/95');
            }
        });
        
        // Smooth animations
        const observerOptions = {
            threshold: 0.1,
            rootMargin: '0px 0px -50px 0px'
        };
        
        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.style.opacity = '1';
                    entry.target.style.transform = 'translateY(0)';
                }
            });
        }, observerOptions);
        
        // Observe form and contact cards
        document.querySelectorAll('.bg-white.rounded-3xl, .bg-gradient-to-br').forEach(el => {
            el.style.opacity = '0';
            el.style.transform = 'translateY(30px)';
            el.style.transition = 'all 0.6s ease-out';
            observer.observe(el);
        });
    </script>
</body>
</html>
