<!DOCTYPE html>
<html lang="id" class="scroll-smooth">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard - Advance Network RG</title>
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    
    <!-- Admin specific styles -->
    <style>
        .admin-sidebar {
            background: linear-gradient(135deg, #1e3a8a 0%, #1e40af 100%);
        }
        .admin-card {
            background: white;
            border-radius: 12px;
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
            transition: all 0.3s ease;
        }
        .admin-card:hover {
            box-shadow: 0 10px 25px -3px rgba(0, 0, 0, 0.1);
            transform: translateY(-2px);
        }
        .stat-card {
            background: linear-gradient(135deg, #06b6d4 0%, #0891b2 100%);
        }
        .sidebar-link {
            transition: all 0.3s ease;
        }
        .sidebar-link:hover {
            background-color: rgba(255, 255, 255, 0.1);
            transform: translateX(5px);
        }
        .sidebar-link.active {
            background-color: rgba(255, 255, 255, 0.2);
            border-left: 4px solid #10b981;
        }
        
        /* Sidebar Overlay for Mobile */
        .sidebar-overlay {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(0, 0, 0, 0.5);
            z-index: 35;
            display: none;
        }
        
        /* Mobile Responsive */
        @media (max-width: 1023px) {
            .sidebar-overlay.show {
                display: block;
            }
            
            .admin-sidebar {
                transform: translateX(-100%);
            }
            
            .admin-sidebar.open {
                transform: translateX(0);
            }
            
            .main-content {
                margin-left: 0 !important;
            }
        }
        
        /* Desktop Responsive */
        @media (min-width: 1024px) {
            .main-content {
                margin-left: 16rem; /* 256px = w-64 */
            }
        }
    </style>
</head>
<body class="bg-gray-100">
    <!-- Admin Header -->
    <header class="bg-white shadow-md fixed w-full top-0 z-50">
        <div class="px-6 py-4 flex justify-between items-center">
            <div class="flex items-center">
                <button id="sidebar-toggle" class="lg:hidden mr-4 text-gray-600 hover:text-gray-900">
                    <i class="fas fa-bars text-xl"></i>
                </button>
                <h1 class="text-2xl font-bold text-gray-900">
                    <i class="fas fa-shield-alt text-cyan-500 mr-2"></i>
                    ANRG Admin
                </h1>
            </div>
            <div class="flex items-center space-x-4">
                <button class="text-gray-600 hover:text-gray-900 relative">
                    <i class="fas fa-bell text-xl"></i>
                    <span class="absolute -top-1 -right-1 bg-red-500 text-white text-xs rounded-full h-5 w-5 flex items-center justify-center">3</span>
                </button>
                <a href="/" class="text-gray-600 hover:text-gray-900 flex items-center">
                    <i class="fas fa-external-link-alt mr-2"></i>
                    View Site
                </a>
                <button onclick="logout()" class="bg-red-500 hover:bg-red-600 text-white px-4 py-2 rounded-lg transition-colors">
                    <i class="fas fa-sign-out-alt mr-2"></i>Logout
                </button>
            </div>
        </div>
    </header>

    <div class="flex pt-16">
        <!-- Sidebar Overlay (Mobile) -->
        <div id="sidebar-overlay" class="sidebar-overlay" onclick="toggleSidebar()"></div>
        
        <!-- Sidebar -->
        <aside id="sidebar" class="admin-sidebar w-64 min-h-screen fixed lg:relative lg:translate-x-0 transform -translate-x-full transition-transform duration-300 z-40">
            <div class="p-6">
                <nav class="space-y-2">
                    <a href="/admin" class="sidebar-link active flex items-center px-4 py-3 text-white rounded-lg">
                        <i class="fas fa-tachometer-alt mr-3"></i>
                        Dashboard
                    </a>
                    <a href="/admin/news" class="sidebar-link flex items-center px-4 py-3 text-white rounded-lg">
                        <i class="fas fa-newspaper mr-3"></i>
                        News Management
                    </a>
                    <a href="/admin/events" class="sidebar-link flex items-center px-4 py-3 text-white rounded-lg">
                        <i class="fas fa-calendar-alt mr-3"></i>
                        Events Management
                    </a>
                    <a href="/admin/team" class="sidebar-link flex items-center px-4 py-3 text-white rounded-lg">
                        <i class="fas fa-users mr-3"></i>
                        Team Management
                    </a>
                    <a href="/admin/contacts" class="sidebar-link flex items-center px-4 py-3 text-white rounded-lg">
                        <i class="fas fa-envelope mr-3"></i>
                        Contact Messages
                    </a>
                    <hr class="border-white/20 my-4">
                    <a href="/admin/settings" class="sidebar-link flex items-center px-4 py-3 text-white rounded-lg">
                        <i class="fas fa-cog mr-3"></i>
                        Settings
                    </a>
                </nav>
            </div>
        </aside>

        <!-- Main Content -->
        <main class="main-content flex-1 p-6">
            <!-- Welcome Section -->
            <div class="mb-8">
                <h2 class="text-3xl font-bold text-gray-900 mb-2">Welcome back, Admin!</h2>
                <p class="text-gray-600">Here's what's happening with Advance Network RG today.</p>
            </div>

            <!-- Stats Grid -->
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
                <div class="stat-card text-white p-6 rounded-lg">
                    <div class="flex items-center justify-between">
                        <div>
                            <h3 class="text-lg font-semibold mb-1">Total News</h3>
                            <p class="text-3xl font-bold" id="total-news">0</p>
                        </div>
                        <i class="fas fa-newspaper text-3xl opacity-80"></i>
                    </div>
                </div>
                
                <div class="stat-card text-white p-6 rounded-lg" style="background: linear-gradient(135deg, #10b981 0%, #059669 100%);">
                    <div class="flex items-center justify-between">
                        <div>
                            <h3 class="text-lg font-semibold mb-1">Total Events</h3>
                            <p class="text-3xl font-bold" id="total-events">0</p>
                        </div>
                        <i class="fas fa-calendar-alt text-3xl opacity-80"></i>
                    </div>
                </div>
                
                <div class="stat-card text-white p-6 rounded-lg" style="background: linear-gradient(135deg, #8b5cf6 0%, #7c3aed 100%);">
                    <div class="flex items-center justify-between">
                        <div>
                            <h3 class="text-lg font-semibold mb-1">Team Members</h3>
                            <p class="text-3xl font-bold" id="total-team">0</p>
                        </div>
                        <i class="fas fa-users text-3xl opacity-80"></i>
                    </div>
                </div>
                
                <div class="stat-card text-white p-6 rounded-lg" style="background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);">
                    <div class="flex items-center justify-between">
                        <div>
                            <h3 class="text-lg font-semibold mb-1">Contact Messages</h3>
                            <p class="text-3xl font-bold" id="total-contacts">0</p>
                        </div>
                        <i class="fas fa-envelope text-3xl opacity-80"></i>
                    </div>
                </div>
            </div>

            <!-- Quick Actions -->
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-8">
                <div class="admin-card p-6">
                    <h3 class="text-xl font-bold text-gray-900 mb-4">
                        <i class="fas fa-plus-circle text-cyan-500 mr-2"></i>
                        Quick Actions
                    </h3>
                    <div class="space-y-3">
                        <a href="/admin/news?action=create" class="flex items-center p-3 bg-blue-50 hover:bg-blue-100 rounded-lg transition-colors">
                            <i class="fas fa-plus text-blue-500 mr-3"></i>
                            <span class="text-gray-700">Add New Article</span>
                        </a>
                        <a href="/admin/events?action=create" class="flex items-center p-3 bg-green-50 hover:bg-green-100 rounded-lg transition-colors">
                            <i class="fas fa-calendar-plus text-green-500 mr-3"></i>
                            <span class="text-gray-700">Create New Event</span>
                        </a>
                        <a href="/admin/team?action=create" class="flex items-center p-3 bg-purple-50 hover:bg-purple-100 rounded-lg transition-colors">
                            <i class="fas fa-user-plus text-purple-500 mr-3"></i>
                            <span class="text-gray-700">Add Team Member</span>
                        </a>
                    </div>
                </div>

                <div class="admin-card p-6">
                    <h3 class="text-xl font-bold text-gray-900 mb-4">
                        <i class="fas fa-chart-line text-green-500 mr-2"></i>
                        Recent Activity
                    </h3>
                    <div class="space-y-3" id="recent-activity">
                        <div class="flex items-center p-3 bg-gray-50 rounded-lg">
                            <i class="fas fa-circle text-green-500 mr-3 text-xs"></i>
                            <span class="text-gray-700 text-sm">Loading recent activities...</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Recent Items -->
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
                <div class="admin-card p-6">
                    <h3 class="text-xl font-bold text-gray-900 mb-4">
                        <i class="fas fa-newspaper text-blue-500 mr-2"></i>
                        Recent News
                    </h3>
                    <div id="recent-news" class="space-y-3">
                        <!-- News items will be loaded here -->
                    </div>
                    <div class="mt-4">
                        <a href="/admin/news" class="text-blue-500 hover:text-blue-600 font-medium">View All →</a>
                    </div>
                </div>

                <div class="admin-card p-6">
                    <h3 class="text-xl font-bold text-gray-900 mb-4">
                        <i class="fas fa-calendar-alt text-green-500 mr-2"></i>
                        Upcoming Events
                    </h3>
                    <div id="recent-events" class="space-y-3">
                        <!-- Event items will be loaded here -->
                    </div>
                    <div class="mt-4">
                        <a href="/admin/events" class="text-green-500 hover:text-green-600 font-medium">View All →</a>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <!-- Overlay for mobile sidebar -->
    <div id="sidebar-overlay" class="fixed inset-0 bg-black opacity-50 z-30 lg:hidden hidden"></div>

    <script>
        // Authentication token
        const token = localStorage.getItem('adminToken') || 'Bearer admin123';

        // API base URL
        const API_BASE = '/api/admin';

        // Sidebar toggle
        const sidebarToggle = document.getElementById('sidebar-toggle');
        const sidebar = document.getElementById('sidebar');
        const sidebarOverlay = document.getElementById('sidebar-overlay');

        sidebarToggle.addEventListener('click', () => {
            sidebar.classList.toggle('-translate-x-full');
            sidebarOverlay.classList.toggle('hidden');
        });

        sidebarOverlay.addEventListener('click', () => {
            sidebar.classList.add('-translate-x-full');
            sidebarOverlay.classList.add('hidden');
        });

        // Logout function
        function logout() {
            localStorage.removeItem('adminToken');
            window.location.href = '/admin/login';
        }

        // Fetch stats
        async function fetchStats() {
            try {
                const [newsRes, eventsRes, teamRes] = await Promise.all([
                    fetch(`${API_BASE}/news`, { headers: { 'Authorization': token } }),
                    fetch(`${API_BASE}/events`, { headers: { 'Authorization': token } }),
                    fetch(`${API_BASE}/team`, { headers: { 'Authorization': token } })
                ]);

                const newsData = await newsRes.json();
                const eventsData = await eventsRes.json();
                const teamData = await teamRes.json();

                document.getElementById('total-news').textContent = newsData.total || 0;
                document.getElementById('total-events').textContent = eventsData.total || 0;
                document.getElementById('total-team').textContent = teamData.total || 0;

                // Display recent items
                displayRecentNews(newsData.data?.slice(0, 3) || []);
                displayRecentEvents(eventsData.data?.slice(0, 3) || []);

            } catch (error) {
                console.error('Error fetching stats:', error);
            }
        }

        // Display recent news
        function displayRecentNews(news) {
            const container = document.getElementById('recent-news');
            if (news.length === 0) {
                container.innerHTML = '<p class="text-gray-500 text-sm">No news articles yet.</p>';
                return;
            }

            container.innerHTML = news.map(item => `
                <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg">
                    <div class="flex-1">
                        <h4 class="font-medium text-gray-900 truncate">${item.title}</h4>
                        <p class="text-sm text-gray-500">${item.category} • ${item.publishDate}</p>
                    </div>
                    <a href="/admin/news?edit=${item.id}" class="text-blue-500 hover:text-blue-600">
                        <i class="fas fa-edit"></i>
                    </a>
                </div>
            `).join('');
        }

        // Display recent events
        function displayRecentEvents(events) {
            const container = document.getElementById('recent-events');
            if (events.length === 0) {
                container.innerHTML = '<p class="text-gray-500 text-sm">No upcoming events.</p>';
                return;
            }

            container.innerHTML = events.map(item => `
                <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg">
                    <div class="flex-1">
                        <h4 class="font-medium text-gray-900 truncate">${item.title}</h4>
                        <p class="text-sm text-gray-500">${item.status} • ${item.date}</p>
                    </div>
                    <a href="/admin/events?edit=${item.id}" class="text-green-500 hover:text-green-600">
                        <i class="fas fa-edit"></i>
                    </a>
                </div>
            `).join('');
        }

        // Load dashboard data
        document.addEventListener('DOMContentLoaded', () => {
            fetchStats();
            
            // Sidebar toggle functionality
            const sidebarToggle = document.getElementById('sidebar-toggle');
            const sidebar = document.getElementById('sidebar');
            const overlay = document.getElementById('sidebar-overlay');
            
            // Toggle sidebar function
            window.toggleSidebar = function() {
                sidebar.classList.toggle('open');
                overlay.classList.toggle('show');
            }
            
            // Add event listener to toggle button
            if (sidebarToggle) {
                sidebarToggle.addEventListener('click', toggleSidebar);
            }
            
            // Close sidebar when clicking outside on mobile
            overlay.addEventListener('click', toggleSidebar);
            
            // Update activity
            setTimeout(() => {
                document.getElementById('recent-activity').innerHTML = `
                    <div class="flex items-center p-3 bg-gray-50 rounded-lg">
                        <i class="fas fa-circle text-green-500 mr-3 text-xs"></i>
                        <span class="text-gray-700 text-sm">Dashboard loaded successfully</span>
                    </div>
                    <div class="flex items-center p-3 bg-gray-50 rounded-lg">
                        <i class="fas fa-circle text-blue-500 mr-3 text-xs"></i>
                        <span class="text-gray-700 text-sm">Admin panel ready</span>
                    </div>
                `;
            }, 1000);
        });
    </script>
</body>
</html>
