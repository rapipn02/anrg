<svg width="800" height="400" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="grad1" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#1e3a8a;stop-opacity:1" />
      <stop offset="50%" style="stop-color:#3b82f6;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#06b6d4;stop-opacity:1" />
    </linearGradient>
  </defs>
  
  <!-- Background -->
  <rect width="100%" height="100%" fill="url(#grad1)"/>
  
  <!-- Grid pattern -->
  <defs>
    <pattern id="grid" width="40" height="40" patternUnits="userSpaceOnUse">
      <path d="M 40 0 L 0 0 0 40" fill="none" stroke="rgba(255,255,255,0.1)" stroke-width="1"/>
    </pattern>
  </defs>
  <rect width="100%" height="100%" fill="url(#grid)" />
  
  <!-- Security icons -->
  <g fill="rgba(255,255,255,0.9)">
    <!-- Shield icon -->
    <path d="M150 120 L150 100 Q150 90 160 90 L180 90 Q190 90 190 100 L190 120 Q190 140 170 160 Q150 140 150 120 Z M160 110 L160 130 L180 130 L180 110 Z" />
    
    <!-- Lock icon -->
    <rect x="280" y="120" width="30" height="20" rx="3" fill="rgba(255,255,255,0.9)"/>
    <path d="M285 120 L285 110 Q285 100 295 100 Q305 100 305 110 L305 120" fill="none" stroke="rgba(255,255,255,0.9)" stroke-width="2"/>
    
    <!-- Network nodes -->
    <circle cx="450" cy="120" r="8" fill="rgba(255,255,255,0.9)"/>
    <circle cx="480" cy="140" r="6" fill="rgba(255,255,255,0.7)"/>
    <circle cx="420" cy="140" r="6" fill="rgba(255,255,255,0.7)"/>
    <line x1="450" y1="120" x2="480" y2="140" stroke="rgba(255,255,255,0.6)" stroke-width="2"/>
    <line x1="450" y1="120" x2="420" y2="140" stroke="rgba(255,255,255,0.6)" stroke-width="2"/>
    
    <!-- Code brackets -->
    <text x="580" y="130" font-family="monospace" font-size="24" fill="rgba(255,255,255,0.8)">&lt;/&gt;</text>
  </g>
  
  <!-- Title -->
  <text x="400" y="220" text-anchor="middle" font-family="Inter, sans-serif" font-size="32" font-weight="bold" fill="white">
    Cybersecurity 2024
  </text>
  
  <!-- Subtitle -->
  <text x="400" y="250" text-anchor="middle" font-family="Inter, sans-serif" font-size="16" fill="rgba(255,255,255,0.8)">
    Advanced Threat Detection &amp; Prevention
  </text>
  
  <!-- Abstract tech elements -->
  <g opacity="0.3">
    <circle cx="100" cy="300" r="3" fill="white"/>
    <circle cx="120" cy="320" r="2" fill="white"/>
    <circle cx="700" cy="100" r="4" fill="white"/>
    <circle cx="720" cy="80" r="2" fill="white"/>
    <line x1="100" y1="300" x2="120" y2="320" stroke="white" stroke-width="1"/>
    <line x1="700" y1="100" x2="720" y2="80" stroke="white" stroke-width="1"/>
  </g>
</svg>
